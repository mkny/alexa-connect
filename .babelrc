{
	"presets": [
		"@babel/preset-env",
		"@babel/preset-typescript"
	],
	"plugins": [
    "@babel/plugin-proposal-class-properties",
		[
			"module-resolver",
			{
				"root": ["./src"],
				"alias": {},
				"extensions": [
					".js",
					".jsx",
					".es",
					".es6",
					".mjs",
					".ts",
					".tsx"
				]
			}
		]
	],
	"ignore": ["node_modules", "dist", "**/*.d.ts", "**/__tests__"]
}